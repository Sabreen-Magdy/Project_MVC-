@model IEnumerable<DepartmentViewModel>
    @{
      ViewData["Title"] = "Index";
    }

    <h1>All Department</h1>
    <br />
    <br />
    <a asp-action="Create" class="btn btn-primary">Create New Department</a>
    <br />
<br />

    <form asp-action="Index">
        <div class="row align-items-center justify-content-center ">
            <div class="col-8">
                <input type="text" class="form-control" name="SearchValue"/>
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-success" value="Search" />
            </div>
        </div>
    </form>
@if(Model.Count() > 0)
{
    <table class=" mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Code)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var dept in Model)
            {
                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                    <td>@dept.DateOfCreation</td>
                    <partial name="_ButtonsPartialView" model="@dept.Id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Departments</h3>
    </div>
}
