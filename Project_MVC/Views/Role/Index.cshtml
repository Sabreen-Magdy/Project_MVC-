@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />

<form asp-action="Index">
    <div class="row align-items-center justify-content-center ">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class=" mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => role.Id)</td>
                    <td>@Html.DisplayFor(M => role.Name)</td>
                    <partial name="_ButtonsPartialView" model="@role.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Roles</h3>
    </div>
}